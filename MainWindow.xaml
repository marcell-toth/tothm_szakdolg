<Window x:Class="tothm_szak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tothm_szak"
        mc:Ignorable="d"
        Title="Szakdolgozat" Background="#FF4F3E5F" Width="850" Height="450" Top="0" Left="0" MinWidth="350" MinHeight="200" Padding="0,0,0,0" ResizeMode="CanMinimize" >


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="45px" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>

        </Grid.ColumnDefinitions>
        
        <Frame x:Name="mainFrame" Grid.Column="3" Grid.Row="1"/>
        
        
        <Button x:Name="btPage1" Content="Page 1" HorizontalAlignment="Left" Margin="95,56,0,0" VerticalAlignment="Top" Height="58" Width="98" Click="btPage1_Click"/>
        <Button Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Height="45" Width="90" Background="#FFFF1515" FontSize="16" FontWeight="Bold" Click="Button_Click" Margin="15,0,0,15"/>


    </Grid>
</Window>
